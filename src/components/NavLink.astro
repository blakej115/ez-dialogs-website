---
import clsx from "clsx";

const { href } = Astro.props;

const active = new URL(Astro.request.url).pathname;
---

<li>
  <a
    class={clsx(
      "block px-4 py-2 text-gray-700 transition-colors duration-500 ease-out hover:bg-gray-200 sm:px-8 sm:py-4",
      {
        "bg-white hover:bg-white": active === href,
      }
    )}
    href={href}
  >
    <slot />
  </a>
</li>
