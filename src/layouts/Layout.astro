---
import "@fontsource-variable/rubik";
import ExampleDialog from "../components/ExampleDialog.astro";
import Sidebar from "../components/Sidebar.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ez Dialogs</title>
  </head>
  <body class="bg-gray-200">
    <main
      class="flex min-h-screen flex-col items-center justify-center p-4 sm:p-8"
    >
      <section
        class="grid grid-cols-[200px_1fr] overflow-hidden rounded-md shadow-md"
      >
        <Sidebar />
        <article class="prose w-full bg-white p-4 sm:p-8">
          <slot />
        </article>
      </section>
      <ExampleDialog />
    </main>
  </body>
</html>
